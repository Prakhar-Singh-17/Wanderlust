<% layout('/layouts/boilerplate') -%>

    <div class="row">
        <h1 align="center" class=" mt-2 heading " >Login for Wanderlust</h1>
        <form class="col-4 offset-4 new-form needs-validation" method="post"
            action="/user/login" novalidate>
            <label for="username" class="form-label">Username</label>
            <input name="username" id= "username" type="text" class="form-control" required>
            <div class="invalid-feedback">
                Enter a username
            </div>
            <br>
             <label for="password" class="form-label">Password</label>
            <input name="password" id= "password" type="password" class="form-control" required>
            <div class="invalid-feedback">
                Enter a valid password
            </div>
            <button class=" mt-4 btn btn-success col-4 offset-4">Submit</button>
        </form>
    </div>